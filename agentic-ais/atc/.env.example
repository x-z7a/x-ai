# X-Plane MCP plugin SSE endpoint.
XPLANE_MCP_SSE_URL=http://127.0.0.1:8765/sse

# GitHub personal access token with Copilot/Models access.
GITHUB_TOKEN=github_pat_replace_me
# Set true to use local Copilot CLI auth instead of GITHUB_TOKEN.
COPILOT_USE_LOGGED_IN_USER=false
# Set true to force OpenAI-compatible custom provider (models.github.ai, etc).
# Keep false to match `CopilotClient()` default behavior (same as test.py).
COPILOT_USE_CUSTOM_PROVIDER=false

# Model used by GitHub Copilot SDK expert calls.
COPILOT_MODEL=gpt-4o-mini
COPILOT_BASE_URL=https://models.github.ai/inference

# If omitted, runtime falls back to GITHUB_TOKEN.
COPILOT_BEARER_TOKEN=

# AutoGen coordinator model endpoint (OpenAI-compatible).
# For GitHub Models you can use: https://models.github.ai/inference
AUTOGEN_BASE_URL=https://models.github.ai/inference
AUTOGEN_MODEL=openai/gpt-4.1-mini
AUTOGEN_MODEL_FALLBACKS=openai/gpt-4o-mini

# If omitted, runtime falls back to GITHUB_TOKEN.
AUTOGEN_API_KEY=

# If true, `transmit_radio` can speak without explicit confirm=true.
ATC_AUTO_TRANSMIT=false
