# X-Plane UDP endpoint and local listener.
XPLANE_UDP_HOST=auto
XPLANE_UDP_PORT=0
XPLANE_DISCOVERY_ENABLED=true
XPLANE_BEACON_MULTICAST_GROUP=239.255.1.1
XPLANE_BEACON_PORT=49707
XPLANE_BEACON_TIMEOUT_SEC=5
XPLANE_UDP_LOCAL_PORT=49001
XPLANE_RREF_HZ=10
XPLANE_RETRY_SEC=3
XPLANE_START_MAX_RETRIES=0
CFI_STARTUP_BOOTSTRAP_WAIT_SEC=8

# X-Plane MCP plugin SSE endpoint.
XPLANE_MCP_SSE_URL=http://127.0.0.1:8765/sse
CFI_ENABLE_MCP_COMMANDS=false

# GitHub Copilot / model auth.
GITHUB_TOKEN=github_pat_replace_me
COPILOT_USE_LOGGED_IN_USER=true
COPILOT_USE_CUSTOM_PROVIDER=false
COPILOT_MODEL=gpt-4o-mini
COPILOT_BASE_URL=https://models.github.ai/inference
COPILOT_BEARER_TOKEN=

# AutoGen coordinator model endpoint.
AUTOGEN_BASE_URL=https://models.github.ai/inference
AUTOGEN_MODEL=openai/gpt-4.1-mini
AUTOGEN_MODEL_FALLBACKS=openai/gpt-4o-mini
AUTOGEN_API_KEY=

# Review cadence and speech policy.
CFI_REVIEW_WINDOW_SEC=30
CFI_REVIEW_TICK_SEC=10
CFI_URGENT_COOLDOWN_SEC=8
CFI_NONURGENT_COOLDOWN_SEC=45
CFI_NONURGENT_SUPPRESS_AFTER_URGENT_SEC=12
CFI_SHUTDOWN_DETECT_DWELL_SEC=8
CFI_HAZARD_PHRASE_RUNTIME_ENABLED=true
CFI_HAZARD_PHRASE_REFRESH_SEC=90

# Memory backend.
CFI_MEMORY_BACKEND=none

# Detailed telemetry stack (off by default).
CFI_TELEMETRY_ENABLED=false

# Optional log paths (defaults resolve inside this project).
CFI_TEAM_CHAT_LOG_PATH=
CFI_RUNTIME_EVENTS_LOG_PATH=
CFI_TELEMETRY_LOG_PATH=
