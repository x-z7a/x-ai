# X-Plane MCP plugin SSE endpoint.
XPLANE_MCP_SSE_URL=http://127.0.0.1:8765/sse

# GitHub personal access token with Copilot/Models access.
GITHUB_TOKEN=github_pat_replace_me

# Set true to use local Copilot CLI auth instead of GITHUB_TOKEN.
COPILOT_USE_LOGGED_IN_USER=false

# Set true to use explicit OpenAI-compatible provider settings.
COPILOT_USE_CUSTOM_PROVIDER=false

# AutoGen model endpoint (OpenAI-compatible). For GitHub Models use:
# https://models.github.ai/inference
AUTOGEN_BASE_URL=https://models.github.ai/inference
AUTOGEN_MODEL=openai/gpt-4.1-mini
AUTOGEN_MODEL_FALLBACKS=openai/gpt-4o-mini

# If omitted, falls back to GITHUB_TOKEN.
AUTOGEN_API_KEY=

# CFI behavior controls.
CFI_MONITOR_POLL_SEC=1.0
CFI_SPEAK_ENABLED=true
CFI_ALERT_POLICY=all
CFI_ENGINE_SHUTDOWN_HOLD_SEC=15
CFI_AI_RULE_EVAL_INTERVAL_SEC=4
# Path to JSON aircraft memory profiles (relative to project root or absolute path).
CFI_PLANE_MEMORY_PATH=plane_memory.json
CFI_MAX_FLIGHT_HOURS=6
